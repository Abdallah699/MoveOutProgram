<%- include("./../partials/header.ejs") %>

<div class="container" style="display: flex; justify-content: space-between; align-items: flex-start;">
    <div class="col-md-6">
        <h2>Register</h2>
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="fullName">Full Name:</label>
                <input type="text" class="form-control" id="fullName" name="fullName" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>

            <% if (errorMessage) { %>
                <div class="alert alert-danger" style="margin-top: 10px;">
                    <%= errorMessage %>
                </div>
            <% } %>
        </form>
    </div>

    <div class="col-md-5 right-image-container">
        <img src="/images/redguy.png" alt="Right-side Image" class="img-responsive" style="max-width: 100%;">
    </div>
</div>

<%- include("./../partials/footer.ejs") %>
