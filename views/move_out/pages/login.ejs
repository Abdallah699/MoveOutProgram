<%- include("./../partials/header.ejs") %>

<div class="container" style="display: flex; justify-content: space-between; align-items: flex-start;">
    <div class="col-md-6">
        <h2>Login</h2>

        <!-- Success Message -->
        <% if (message) { %>
            <div class="alert alert-success">
                <p><%= message %></p>
            </div>
        <% } %>

        <!-- Error Message -->
        <% if (errorMessage) { %>
            <div class="alert alert-danger">
                <p><%= errorMessage %></p>
            </div>
        <% } %>

        <!-- Login Form -->
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <p class="register-text mt-3">
                Don't have an account? <a href="/register">Create one</a>.
            </p>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        <!-- Social Login -->
        <div class="social-login mt-3">
            <p>Or sign in with:</p>
            <a href="/auth/google" class="btn btn-danger d-flex align-items-center justify-content-center">
                <i class="fab fa-google mr-2"></i> Sign in with Google
            </a>
        </div>
    </div>

    <!-- Right Image Container -->
    <div class="col-md-5 right-image-container">
        <img src="https://cdn.discordapp.com/attachments/1220116287414603987/1283459529341927565/image.png?ex=66e31255&is=66e1c0d5&hm=fc085f2c8b5c36744f6cd7eb4c4de023937a426cefcceeb4f95b75112ccaa3db&" alt="Right-side Image" class="img-responsive" style="max-width: 100%;">
    </div>
</div>

<%- include("./../partials/footer.ejs") %>
